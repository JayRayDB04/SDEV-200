// superclass for the two types of money accounts
public class MoneyAccount {
    private int accountNumber;
    private int routingNumber;

    // allows user to transfer money between accounts
    static void TransferMoney(){

    }
    // returns balance for the specifc account
    public double ViewBalance{
        return this.balance;
    }
    // returns account number for specific account
    public int ViewAccountNumber{
        return this.accountNumber;
    }
    // returns routing number for specific account
    public int ViewRoutingNumber{
        return this.routingNumber;
    }

    // allows user to name their account     
    static void NameAccount(){
        System.out.print("Please name your account: ");
    }

    // allows user to view when the account was created
    static void ViewDateCreated(){
        return this.dateCreated;
    }

}

